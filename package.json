{
  "name": "syncano",
  "version": "1.0.0",
  "description": "A library to intereact with the Syncano API.",
  "main": "lib/syncano.js",
  "author": "Kelly Andrews",
  "contributors": [
    {
      "name": "Jakub Bilko",
      "email": "jakub.bilko@syncano.com"
    },
    {
      "name": "Daniel Kopka",
      "email": "daniel.kopka@syncano.com"
    }
  ],
  "license": "ISC",
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:dist": "rimraf ./dist",
    "clean:docs": "rimraf ./docs",
    "clean:coverage": "rimraf ./coverage",
    "prebuild": "npm run clean",
    "build": "npm-run-all build:*",
    "build:lib": "babel src --out-dir lib",
    "build:dist": "webpack",
    "build:docs": "jsdoc -c ./conf.json -t ./node_modules/ink-docstrap/template -R README.md -d ./docs -r ./src",
    "lint": "eslint src/** test/**",
    "pretest": "npm run lint",
    "test": "npm-run-all test:*",
    "test:lib": "mocha 'test/lib/**/*.js' --compilers js:babel-register",
    "test:dist": "karma start karma.config.js",
    "test:integration": "mocha 'test/integration/**/*.js' --compilers js:babel-register",
    "codeclimate": "codeclimate-test-reporter < ./coverage/lcov.info",
    "watch": "npm-run-all --parallel watch:*",
    "watch:lint": "esw src/** test/** --watch --format simple-detail",
    "watch:lib": "npm run build:lib -- --watch",
    "watch:dist": "npm run build:dist -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Syncano/syncano-js.git"
  },
  "dependencies": {
    "bluebird": "^3.1.1",
    "lodash": "^3.10.1",
    "stampit": "^2.1.1",
    "superagent": "^1.6.1",
    "validate.js": "^0.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-inline-environment-variables": "^6.3.13",
    "babel-plugin-transform-strict-mode": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "eslint": "^1.10.3",
    "eslint-watch": "^2.1.4",
    "ink-docstrap": "^1.1.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.1",
    "istanbul-instrumenter-loader": "^0.1.3",
    "jsdoc": "^3.4.0",
    "karma": "^0.13.15",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^0.2.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.4",
    "mocha-logger": "^1.0.2",
    "mockery": "^1.4.0",
    "nock": "^5.2.1",
    "npm-run-all": "^1.4.0",
    "phantomjs": "^1.9.19",
    "rimraf": "^2.4.5",
    "should": "^8.0.2",
    "sinon": "^1.17.2",
    "webpack": "^1.12.9"
  },
  "babel": {
    "plugins": [
      "transform-inline-environment-variables",
      "transform-strict-mode"
    ],
    "presets": [
      "es2015"
    ]
  }
}
